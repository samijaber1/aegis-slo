{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aegis.dev/schemas/slo_v1.json",
  "title": "AegisSLO v1 SLO Definition",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "additionalProperties": false,
  "properties": {
    "apiVersion": {
      "type": "string",
      "const": "aegis.dev/v1"
    },
    "kind": {
      "type": "string",
      "const": "SLO"
    },
    "metadata": {
      "type": "object",
      "required": ["id", "service"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 3,
          "maxLength": 128,
          "pattern": "^[a-zA-Z0-9][a-zA-Z0-9._-]*$"
        },
        "service": {
          "type": "string",
          "minLength": 1,
          "maxLength": 128
        },
        "owner": {
          "type": "string",
          "minLength": 1,
          "maxLength": 128
        },
        "description": {
          "type": "string",
          "maxLength": 2048
        }
      }
    },
    "spec": {
      "type": "object",
      "required": [
        "environment",
        "objective",
        "complianceWindow",
        "evaluationInterval",
        "sli",
        "burnPolicy",
        "gating"
      ],
      "additionalProperties": false,
      "properties": {
        "environment": {
          "type": "string",
          "minLength": 1,
          "maxLength": 64
        },
        "objective": {
          "type": "number",
          "exclusiveMinimum": 0,
          "exclusiveMaximum": 1
        },
        "complianceWindow": {
          "type": "string",
          "pattern": "^[0-9]+(s|m|h|d)$",
          "description": "Duration string: e.g. 5m, 1h, 30d"
        },
        "evaluationInterval": {
          "type": "string",
          "pattern": "^[0-9]+(s|m|h)$",
          "description": "Duration string: e.g. 30s, 1m"
        },
        "sli": {
          "type": "object",
          "required": ["type", "good", "total"],
          "additionalProperties": false,
          "properties": {
            "type": {
              "type": "string",
              "enum": ["ratio", "latency_threshold"]
            },
            "thresholdMs": {
              "type": "integer",
              "minimum": 1,
              "maximum": 600000,
              "description": "Required for latency_threshold"
            },
            "good": {
              "$ref": "#/$defs/queryRef"
            },
            "total": {
              "$ref": "#/$defs/queryRef"
            }
          },
          "allOf": [
            {
              "if": {
                "properties": { "type": { "const": "latency_threshold" } },
                "required": ["type"]
              },
              "then": { "required": ["thresholdMs"] }
            }
          ]
        },
        "burnPolicy": {
          "type": "object",
          "required": ["rules"],
          "additionalProperties": false,
          "properties": {
            "rules": {
              "type": "array",
              "minItems": 1,
              "maxItems": 50,
              "items": {
                "type": "object",
                "required": ["name", "shortWindow", "longWindow", "threshold", "action"],
                "additionalProperties": false,
                "properties": {
                  "name": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 128
                  },
                  "shortWindow": {
                    "type": "string",
                    "pattern": "^[0-9]+(s|m|h|d)$"
                  },
                  "longWindow": {
                    "type": "string",
                    "pattern": "^[0-9]+(s|m|h|d)$"
                  },
                  "threshold": {
                    "type": "number",
                    "minimum": 0.0001,
                    "maximum": 100000
                  },
                  "action": {
                    "type": "string",
                    "enum": ["ALLOW", "WARN", "BLOCK"]
                  }
                }
              }
            }
          }
        },
        "gating": {
          "type": "object",
          "required": ["minDataPoints", "stalenessLimit"],
          "additionalProperties": false,
          "properties": {
            "minDataPoints": {
              "type": "integer",
              "minimum": 1,
              "maximum": 1000
            },
            "stalenessLimit": {
              "type": "string",
              "pattern": "^[0-9]+(s|m|h)$"
            }
          }
        }
      }
    }
  },
  "$defs": {
    "queryRef": {
      "type": "object",
      "required": ["prometheusQuery"],
      "additionalProperties": false,
      "properties": {
        "prometheusQuery": {
          "type": "string",
          "minLength": 1,
          "maxLength": 10000
        }
      }
    }
  }
}
